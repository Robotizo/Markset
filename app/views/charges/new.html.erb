<%= stylesheet_link_tag "charges", :media => "all" %>

<div id = "sidev">
<div id ="cart">
  <% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
    <%= render @cart %>
  <% end %>
  <% end %>
</div>
</div>

<div class="container">
	<div class="text-center">
		<div class="mainTitleNew">Payment</div>
		<hr>
		<table class="table table-bordered">
			<thead>
      			<tr>
        			<th>Quantity</th>
			        <th>Product name</th>
			        <th class="pageName">Store name</th>
			        <th>Price</th>
      			</tr>
   		 	</thead>
   		 	<tbody>
			<%= render(@cart.line_items) %>
			<th></th>
         	<th class="second"></th>
				<td >Total</td>
				<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
			</tbody>
		</table>
		<hr>
		<%= render 'form', charge: @charge %>
	</div>
</div>