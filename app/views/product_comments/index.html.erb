<p id="notice"><%= notice %></p>

<h1>Product Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_comments.each do |product_comment| %>
      <tr>
        <td><%= product_comment.user_id %></td>
        <td><%= product_comment.product_id %></td>
        <td><%= product_comment.content %></td>
        <td><%= link_to 'Show', product_comment %></td>
        <td><%= link_to 'Edit', edit_product_comment_path(product_comment) %></td>
        <td><%= link_to 'Destroy', product_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Comment', new_product_comment_path %>
