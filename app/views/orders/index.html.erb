<%= stylesheet_link_tag "orders", :media => "all" %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="text-center">
  <div class="mainTitle">User Orders</div>
  </div>
  <hr>
  <% if @orders.present? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date Ordered</th>
            <th>Pay type</th>
          </tr>
        </thead>
        <tbody>
      <%  @orders.each do |order| %>
      <tr>
         <td><%= order.id %></td>
         <td><%= order.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
         <td><%= order.pay_type %></td>
         <td><%= link_to 'Show', order, method: :get %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  <div class="text-center paginateOrder">
    <%= will_paginate @orders, method: :get %>
  </div>
  <% else %>
  <div class="text-center">
      <p class="noOrder">There are no orders yet. Start your first order by checking out the pages.</p>
      <%= button_to "Pages", pages_path, method: :get, class: "newUse" %>
  </div>
  <% end %>
</div>
