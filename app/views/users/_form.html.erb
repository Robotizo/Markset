          <%= f.file_field :image, class: "upload" %>
        </div>
    </div>
      <hr>
  </div>

<div class="col-md-6 col-md-offset-1 col-xs-12 newMargin">

  <div class="field">
    <%= f.label :name, class: "titlePostForm" %><br>
    <%= f.text_field :name, class: "fieldUsers" %>
  </div>
<hr>
<% if params[:action] == 'edit' || params[:action] == 'update' || params[:action] == 'show' %> 
  <%= f.label "Your Username is" , class: "titlePostForm" %>
    <div class= "username"><%= @user.username %></div>
<% end %>
