  <div class="row">
    <div class="text-center">
    <% if params[:action] == 'new' || params[:action] == 'create' %> 
      <legend>Enter your details</legend>
      <% end %>
        <%= image_tag @user.image_url(:thumb), class: "userImage" if @user.image? %>
       <div class="fileUpload btn btn-primary">
